vbell off	
vbell_msg "DING"
autodetach on				
startup_message off			
defscrollback 10000

bufferfile            $HOME/.screen/exchange
hardcopydir           ~/.screen
# If begins with a '-' character, the shell will be started as a login shell.
shell -zsh
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= @%H - %c"
